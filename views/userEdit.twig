{% extends 'base.twig' %}


{% block assets %}
    <link rel='stylesheet' type="text/css" href="{{ site_url }}assets/css/userEdit.css">
{% endblock %}

{% block content %}
    <h1> Account Settings </h1>
    {% if errors is defined %}
        {% for error in errors %}
            <div class='error'>{{ error }}</div>
        {% endfor %}
    {% endif %}

    <div id="updater">
        <h4>Change Password</h4>

        <form id="update_account_form" action='{{ site_url }}user/options' method="post">
            <input type="password" name="password" id="password" placeholder="Password">
            <input type="password" name="passwordCheck" id="passwordCheck" placeholder="Password, again">
            <button id="update_account" value='update_account' name="update_account">Update !</button>
        </form>
        <hr/>
        <h4>Delete account</h4>

        <form id="delete_account_form" action='{{ site_url }}user/options' method="post">
            <p>This action is definitive. All your links will be deleted.</p>
            <button id="delete_account" value='delete_account' name="delete_account">Delete Account (Definitively)
            </button>
        </form>
    </div>

{% endblock %}