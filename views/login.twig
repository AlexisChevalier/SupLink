{% extends 'base.twig' %}


{% block assets %}
    <link rel='stylesheet' type="text/css" href="{{ site_url }}assets/css/signup.css">
{% endblock %}

{% block content %}
    <h1> Log in to our service !</h1>
    {% if errors is defined %}
        {% for error in errors %}
            <div class='error'>{{ error }}</div>
        {% endfor %}
    {% endif %}

    <form id="loginform" method="POST">
        <input type="text" name="username" value="{{ username }}" id="username" placeholder="Email">
        <input type="password" name="password" id="password" placeholder="Password">
        <button id="submit_signup" name="submit_login" type="submit">Log In !</button>
        <p>All the fields are mandatory</p>
    </form>


{% endblock %}